{% extends 'base.html.twig' %}

{% block body %}
    <h1>Channel list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Format</th>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for channel in channels %}
            <tr>
                <td><a href="{{ path('channel_show', { 'id': channel.id }) }}">{{ channel.id }}</a></td>
                <td>{{ channel.url }}</td>
                <td>{{ channel.format }}</td>
                <td>{{ channel.user }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('channel_show', { 'id': channel.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('channel_edit', { 'id': channel.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('channel_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
